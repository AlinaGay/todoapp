<h1>Create a new Todo</h1>

<% if @todo.errors.any? %>
  <h2>The following errors prevented the todo from being saved</h2>
  <ul>
    <% @todo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li> 
    <% end %>  
  </ul>
<% end %>   
 
<%= form_for @todo do |todo_form| %>
  <p>
    <%= todo_form.label :name %><br>
    <%= todo_form.text_field :name %>
  </p>
  <p>
    <%= todo_form.label :descriptions %><br>
    <%= todo_form.text_area :descriptions %>
  </p>
  <p>
    <%= todo_form.submit %><br>
  </p>
<% end %>  

<%= link_to "Back to todos listing", todos_path %>